<div class="navbar transparent navbar-fixed-top">
  <nav class="navbar-inner">
    <div class="navbar-header">
      <a class-"navbar-brand" href="/"><i class="fa fa-viacoin"></i>agabondr </a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user.nil? %>
        <li class="active"><a href="#" data-toggle="modal" data-target="#signup-modal" id="signup">Sign Up</a></li>
        <%= render partial: "signup", locals: { person: User.new } %>
        <li class="active"><a href="#" data-toggle="modal" data-target="#login-modal" id="login">Log In</a></li>
        <%= render "login" %>
        <li><%= link_to "Cart: #{@cart.count(@cart.data)}", new_order_path %></li>
        <li><%= link_to "Menu", categories_path, :method => :get %></li>
      <% elsif current_user.role == 0 %>
      <%= render partial: "user_profile_dropdown", locals: {user: current_user} %></li>
      <% elsif current_user.host? %>
        <%= render partial: "host_profile_dropdown", locals: {user: current_user} %></li>
      <% else %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Profile <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Log Out", logout_path, method: "DELETE" %></li>
        </ul>
      </li>
      <% end %>
    </ul>
  </nav>
</div>
